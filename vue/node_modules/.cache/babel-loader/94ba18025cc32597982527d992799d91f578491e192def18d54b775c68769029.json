ce);\n          break;\n        default:\n          this.filteredGoods = [...this.goods];\n          this.handleFilter();\n      }\n    },\n    resetFilters() {\n      this.priceRange = [0, 50000];\n      this.selectedBrands = [];\n      this.selectedSize = '';\n      this.sortBy = 'default';\n      this.handleFilter();\n    },\n    navTo(url) {\n      location.href = url;\n    }\n  }\n};","map":{"version":3,"names":["name","data","categoryId","categoryName","goods","filteredGoods","priceRange","selectedBrands","selectedSize","sortBy","brands","id","sizes","created","$route","query","loadGoods","methods","$request","get","then","res","code","length","typeName","$message","error","msg","handleFilter","filter","item","priceMatch","price","brandMatch","includes","brand","sizeMatch","size","handleSort","sort","a","b","resetFilters","navTo","url","location","href"],"sources":["src/views/front/Type.vue"],"sourcesContent":["<template>\r\n  <div class=\"main-content\">\r\n    <div class=\"container\">\r\n      <!-- 筛选器侧边栏 -->\r\n      <div class=\"filter-sidebar\">\r\n        <div class=\"filter-section\">\r\n          <h3>价格区间</h3>\r\n          <div class=\"price-range\">\r\n            <el-slider\r\n              v-model=\"priceRange\"\r\n              range\r\n              :min=\"0\"\r\n              :max=\"50000\"\r\n              :step=\"1000\"\r\n              @change=\"handleFilter\"\r\n            ></el-slider>\r\n            <div class=\"price-display\">\r\n              <span>￥{{ priceRange[0] }}</span>\r\n              <span>￥{{ priceRange[1] }}</span>\r\n            </div>\r\n          </div>\r\n        </div>\r\n\r\n        <div class=\"filter-section\">\r\n          <h3>品牌</h3>\r\n          <el-checkbox-group v-model=\"selectedBrands\" @change=\"handleFilter\">\r\n            <el-checkbox \r\n              v-for=\"brand in brands\" \r\n              :key=\"brand.id\" \r\n              :label=\"brand.name\"\r\n              class=\"brand-checkbox\"\r\n        